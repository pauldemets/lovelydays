{% extends 'base.html.twig' %}

{% block title %}Index
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste des propriétés :</h1>

		{% for property in properties %}
			<a>{{ property.name }}</a>
		{% endfor %}
		<hr>

		<a href="/add">
			<button>Ajouter</button>
		</a>
	</div>
{% endblock %}
