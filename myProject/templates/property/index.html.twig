{% extends 'base.html.twig' %}

{% block title %}Index
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.imgDelete {
			width: 25px;
			height: 25px;
			vertical-align:middle;
		}
		.action {
			
		}
		.item {
			margin-bottom:10px;
		}
		a{
			text-decoration:none;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste des propriétés :</h1>
		<ul>
			{% for property in properties %}
				<li class="item">
					<a href="{{ path('detail', {'id': property.id}) }}">{{ property.name }}</a>
					<a href="{{ path('delete', {'id': property.id}) }}" class="action">
						<img src="{{ asset('imgs/trash.png') }}" alt="delete" class="imgDelete">
					</a>
					<a href="{{ path('update', {'id': property.id}) }}" class="action">
						<img src="{{ asset('imgs/edit.png') }}" alt="" class="imgDelete">
					</a>

				</li>
			{% endfor %}
		</ul>
		<hr>
		<a href="/add">
			<button>Ajouter</button>
		</a>
	</div>
{% endblock %}
