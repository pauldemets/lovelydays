{% extends 'base.html.twig' %}

{% block title %}Ajouter
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		span {
			float: left;
			margin-right: 5px;
		}
		.form {
			margin-bottom: 10px;
		}
		input {}
	</style>

	<div class="example-wrapper">
		<a href="/">
			<button>Retour</button>
		</a>
		<h1>Ajouter une propriété !</h1>

		<form class="ui form" action="store" method="POST">
			<div class="form">
				<span>Nom de la propriété :</span>
				<input type="text" name="name">
			</div>

			<div class="form">
				<span>Description :</span>
				<textarea name="desc" id="" cols="30" rows="4"></textarea>
			</div>

			<div class="form">
				<span>Propriétaire :</span>
				<input type="text" name="">
			</div>

			<div class="form">
				<span>Prix par mois :</span>
				<input type="number" name="price">
			</div>

			<div class="form">
				<span>Nombre de lits :</span>
				<input type="integer" name="bed">
			</div>

			<button type="submit">Ajouter</button>
		</form>


	</div>
{% endblock %}
